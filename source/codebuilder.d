import compiler;

public class CodeBuilder {
    public ubyte[] Bytecode;
    
	public string UWUCode;
	private int cntr = 0;
	private int cntr2 = 0;

    public void PushByte(ubyte instr) {
     	Bytecode ~= instr;
    }

	public void handle_count() {
		if (cntr >= 8) {
			cntr = 0;
			UWUCode ~= " ";
			cntr2++;
		}
		if (cntr2 >= 4) {
			cntr2 = 0;
			UWUCode ~= "\n";
		}
	}

	public void PushBitU(bool val) {
		handle_count();
		cntr++;
		if (val) UWUCode ~= "w";
		else {
			if (OWO_ENABLED) UWUCode ~= "o";
			else UWUCode ~= "u";
		}
	}
}
